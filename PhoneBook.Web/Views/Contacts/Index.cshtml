
@{
    ViewData["Title"] = "Index";
}
@model List<ContactViewModel>

<td><a class="btn btn-success" asp-controller="Contacts" asp-action="Save">Save</a></td>
<table class="table table-striped">
    <thead>
        <tr>
        <td>Id</td>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Email</td>
        <td>Profession</td>
        <td>Address</td>
        <td>Web Address</td>
        <td>Nick Name</td>
        <td>Actions</td>
        </tr>  
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.Profession</td>
            <td>@item.Address</td>
            <td>@item.WebAddress</td>
            <td>@item.NickName</td>
            <td><a class="btn btn-warning" asp-controller="Contacts" asp-action="Update" asp-route-id="@item.Id">Update</a>
                <a class="btn btn-danger" asp-controller="Contacts" asp-action="Remove" asp-route-id="@item.Id">Remove</a>
                </td>
            
            </tr>
        }
    </tbody>
   
</table>