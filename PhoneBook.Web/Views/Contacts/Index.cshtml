@{
    ViewData["Title"] = "Index";
}
@model List<ContactViewModel>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

<a class="btn btn-success my-1" asp-controller="Contacts" asp-action="Save">
    <i class="bi bi-person-plus-fill"></i>
    Create Contact</a>
<table class="contactsTable table table-striped table-hover table-bordered">
    <thead class="table-dark text-white">
        <tr>
            <td>Id</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>
                    <a class="btn btn-secondary" asp-controller="Contacts" asp-action="GetContactDetailsWithPhoneNumbers" asp-route-id="@item.Id">
                        <i class="bi bi-justify"></i>
                        Details</a>
                    <a class="btn btn-primary" asp-controller="Contacts" asp-action="GetContactWithPhoneNumbers" asp-route-id="@item.Id">
                        <i class="bi bi-telephone-fill"></i>
                        Phone Numbers
                    </a>
                    <a class="btn btn-warning" asp-controller="Contacts" asp-action="Update" asp-route-id="@item.Id">
                        <i class="bi bi-pencil-fill"></i>
                        Edit</a>
                    <a class="btn btn-danger" asp-controller="Contacts" asp-action="Remove" asp-route-id="@item.Id">
                        <i class="bi bi-trash-fill"></i>
                        Delete</a>
                </td>

            </tr>
        }
    </tbody>

</table>