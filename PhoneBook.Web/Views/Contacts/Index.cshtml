
@{
    ViewData["Title"] = "Index";
}
@model List<ContactViewModel>

<td><a class="btn btn-success" asp-controller="Contacts" asp-action="Save">Add Contact</a></td>
<table class="table table-striped">
    <thead>
        <tr>
        <td>Id</td>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Email</td>
        <td>Actions</td>
        </tr>  
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>
                <a class="btn btn-secondary" asp-controller="Contacts" asp-action="GetContactDetailsWithPhoneNumbers" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-primary" asp-controller="Contacts" asp-action="GetContactWithPhoneNumbers" asp-route-id="@item.Id">Phone Numbers</a>
                <a class="btn btn-warning" asp-controller="Contacts" asp-action="Update" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger" asp-controller="Contacts" asp-action="Remove" asp-route-id="@item.Id">Remove</a>
                </td>
            
            </tr>
        }
    </tbody>
   
</table>