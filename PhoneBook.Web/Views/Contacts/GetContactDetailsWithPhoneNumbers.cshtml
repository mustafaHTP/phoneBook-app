@{
    ViewData["Title"] = "GetContactDetailsWithPhoneNumbers";
}
@model ContactWithPhoneNumbersViewModel

<div class="container rounded p-5 my-3 bg-gradient bg-secondary text-white">
    <p class="text-center h1">DETAILS</p>
</div>

<div class="details row justify-content-center">
    <div class="col-md-6">
        <div class="card w-100 rounded bg-info bg-gradient">

            <div class="card-header p-1">
                <p class="text-center h3">@Model.FullName</p>
            </div>

            <div class="card-body">
                <dl>
                    <dt>First Name:</dt>
                    <dd>@Model.FirstName</dd>

                    <dt>Last Name:</dt>
                    <dd>@Model.LastName</dd>

                    @if(@Model.Email != null)
                    {
                    <dt>Email:</dt>
                    <dd>@Model.Email</dd>
                        
                    }

                    @if(@Model.Address != null)
                    {
                    <dt>Address:</dt>
                    <dd>@Model.Address</dd>
                        
                    }

                    @if (@Model.WebAddress != null)
                    {
                        <dt>Web Address:</dt>
                        <dd>@Model.WebAddress</dd>
                    }

                    @if (@Model.NickName != null)
                    {
                        <dt>Nickname:</dt>
                        <dd>@Model.NickName</dd>
                    }

                    <dt>Phone Numbers:</dt>
                </dl>

                <ol class="phoneNumbers">
                    @foreach (var item in Model.PhoneNumbers)
                    {
                        <li>@item.PhoneNo</li>
                    }
                </ol>

            </div>

        </div>
    </div>
</div>