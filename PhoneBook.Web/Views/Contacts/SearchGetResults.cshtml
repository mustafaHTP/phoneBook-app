
@{
    ViewData["Title"] = "SearchGetResults";
}
@model MyQueryStringViewModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

<div class="container p-1 my-2 rounded bg-dark bg-gradient text-white">
    <form asp-controller="Contacts" asp-action="Search" method="post">
    <div class="form-group input-group rounded p-1 bg-dark text-white">
        <input class="form-control border border-2 border-info bg-dark text-white" asp-for="@Model.QueryString"/>
        <button class="btn btn-outline-info border border-1 border-info" type="submit">
            <i class="bi bi-search"></i>
            <span class="text-white">Search</span>
        </button>

    </div>
    </form>
</div>

<table class="contactsTable table table-striped table-hover table-bordered">
    <thead class="table-dark text-white">
        <tr>
            <td>Id</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.ContactViewModels)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>
                    <a class="btn btn-secondary" asp-controller="Contacts" asp-action="GetContactDetailsWithPhoneNumbers" asp-route-id="@item.Id">
                        <i class="bi bi-justify"></i>
                        Details
                    </a>
                    <a class="btn btn-primary" asp-controller="Contacts" asp-action="GetContactWithPhoneNumbers" asp-route-id="@item.Id">
                        <i class="bi bi-telephone-fill"></i>
                        Phone Numbers
                    </a>
                    <a class="btn btn-warning" asp-controller="Contacts" asp-action="Update" asp-route-id="@item.Id">
                        <i class="bi bi-pencil-fill"></i>
                        Edit
                    </a>
                    <a class="btn btn-danger" asp-controller="Contacts" asp-action="Remove" asp-route-id="@item.Id">
                        <i class="bi bi-trash-fill"></i>
                        Delete
                    </a>
                </td>

            </tr>
        }
    </tbody>

</table>

