@{
    ViewData["Title"] = "Save";
}
@model PhoneNumberViewModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

<div class="container rounded p-5 my-3 bg-gradient bg-success text-white">
    <p class="text-center h1">Add Phone Number</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card w-100 rounded bg-gradient bg-primary">
            <div class="card-body">
                <form asp-action="Save" method="post" asp-controller="PhoneNumbers">
                    <div class="form-group">
                        <label class="text-white" asp-for="PhoneNo">Phone Number</label>
                        <input asp-for="PhoneNo" class="form-control" placeholder="Enter the phone number..." />
                        <span asp-validation-for="PhoneNo" class="text-white bg-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="text-white" asp-for="ContactId">Contact</label>
                        <select asp-for="ContactId" asp-items="ViewBag.Contacts" class="form-control">
                            <option style="display:none" value="" selected disable>Please Select Contact...</option>
                        </select>
                        <span asp-validation-for="ContactId" class="text-white bg-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success my-1">
                            <i class="bi bi-plus-square"></i>
                            Add
                        </button>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>

