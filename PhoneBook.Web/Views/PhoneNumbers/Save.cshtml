
@{
    ViewData["Title"] = "Save";
}
@model PhoneNumberDto
<h1>Save Phone Number</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Save" method="post" asp-controller="PhoneNumbers">
            <div class="form-group">
                <label asp-for="PhoneNo"></label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactId"></label>
                <select asp-for="ContactId" asp-items="ViewBag.Contacts" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

