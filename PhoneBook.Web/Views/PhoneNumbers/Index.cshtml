
@{
    ViewData["Title"] = "Index";
}
@model List<PhoneNumbersWithContactViewModel>

<td><a class="btn btn-success" asp-controller="PhoneNumbers" asp-action="Save">Add Phone Number</a></td>
<table class="table table-striped">
    <thead>
        <tr>
        <td>Id</td>
        <td>PhoneNumber</td>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Actions</td>
        </tr>  
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
            <td>@item.Id</td>
            <td>@item.PhoneNo</td>
            <td>@item.Contact.FirstName</td>
            <td>@item.Contact.LastName</td>
            <td><a class="btn btn-warning" asp-controller="PhoneNumbers" asp-action="Update" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger" asp-controller="PhoneNumbers" asp-action="Remove" asp-route-id="@item.Id">Remove</a>
                </td>
            </tr>
        }
    </tbody>
   
</table>

